# Telegram & Web
BOT_TOKEN=1234567890:REPLACE_ME
# Public https URL that Telegram will call; must end with WEBHOOK_PATH below
WEBHOOK_URL=https://your-domain.example.com/telegram/webhook
# Optional: secret token to verify Telegram requests (set the same in BotFather)
WEBHOOK_SECRET=REPLACE_ME_OPTIONAL
# Webhook path your FastAPI listens on (must match the URL path above)
WEBHOOK_PATH=/telegram/webhook

# OpenAI (optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
# Use a service role for server-side upserts (keep it private!)
SUPABASE_SERVICE_ROLE_KEY=REPLACE_ME
SUPABASE_DB_SCHEMA=public

# App integration
WEBAPP_URL=https://your-miniapp.example.com
# Defaults
DEFAULT_CURRENCY=UZS
TZ=Europe/Warsaw
